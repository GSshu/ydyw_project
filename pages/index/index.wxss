/**index.wxss**/
.serach{
    margin: 0 75rpx;
    background-color: #F3F3F3;
    border-radius: 15rpx;
    margin-bottom: 25rpx;
}

.serach_view_show{
    display: block;
    color: #808080;
    padding: 20rpx 0;
    font-size: 28rpx;
    background-color: #F3F3F3;
    border-radius: 15rpx;
    text-align: center;
}

.imgview{
  margin: 0 25rpx;
}

.logoimage{
  max-width: 100%;
  display: block;
}

.title{
  padding-top: 25rpx; 
  font-size: 25rpx;
  padding-left: 20rpx;
}

.item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.manger{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin: 25rpx 0rpx;
}

.text{
  display: block;
  color: #000000;
  line-height: 10rpx;
  font-size: 22rpx;
  text-align: center;
}

.iconnum{
  width: 88rpx; 
  height: 88rpx;
  position: relative;
  border: solid 1rpx #000000;
}

.icon{
  width: 88rpx; 
  height: 88rpx;
}

.shownum{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: #e90e0e;
  color: #ffffff;
  border-radius: 20rpx;
}

.divider {
  width: 100%;
  height: 5rpx;
  background-color: #f0f0f0;
}

.changecolor{
  background-color: #f8e6e6;
}

.issuecolor{
  background-color: #f7f6da;
}

.eventcolor{
  background-color: #ddecd4;
}

.staffcolor{
  background-color: #e0eef3;
}

.reddot {
    width: 50rpx;
    height:20px;
    border-radius: 10rpx;
    background: red;
    text-align: center;
    color: white;
}


