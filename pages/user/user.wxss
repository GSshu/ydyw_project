.avatar {
  display: flex;
  align-items: center;
  height: 200rpx;
  background-color: #3a4861;
}

.avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  box-shadow: 0 0 0 10rpx #777f92;
}

.info{
  font-size: 25rpx;
  color: rgb(228, 227, 225);
  margin-left: 30rpx; 
}

.info text{
  display: block;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding: 40rpx 60rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
  font-size: 30rpx;
}

.cells .item::after {
  content: '';
  display: inline-block;
  height: 10rpx;
  width: 10rpx;
  border: 0 solid #ccc;
  border-width: 3rpx 3rpx 0 0;
  transform: matrix(1, 1, -1, 1, 0, 0);
}

.divider {
  width: 100%;
  height: 20rpx;
  background-color: #f0f0f0;
}
